<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/Repeating_activity_color"
    tools:context="com.example.antrosgeor.skynotejob.Repeating_activity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Notification Time"
        android:id="@+id/name_company"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/remember_you"
        android:id="@+id/remember_title"
        android:layout_marginTop="50dp"
        android:layout_below="@+id/name_company"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:gravity="center"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/remember_you_text"
        android:id="@+id/Remember_text"
        android:layout_below="@+id/remember_title"
        android:layout_marginTop="50dp"
        android:layout_alignRight="@+id/remember_title"
        android:layout_alignEnd="@+id/remember_title"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:gravity="center"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/show_remember"
        android:id="@+id/Remember_button"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/Remember_text"
        android:layout_alignEnd="@+id/Remember_text"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Close_remember"
        android:id="@+id/close_remember"
        android:layout_above="@+id/Remember_button"
        android:layout_marginBottom="80dp"
        android:layout_alignRight="@+id/Remember_button"
        android:layout_alignEnd="@+id/Remember_button"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
